    "DilosReadOnly": "server=srv-sql01;Initial Catalog=Dilos;Language=ENGLISH;Persist Security Info=True;User ID=reader;Password=reader",
    "DilosDEV": "server=192.168.101.45;Initial Catalog=Dilos202009;Language=ENGLISH;Persist Security Info=True;User ID=DilosTest;Password=DilosTest123!",
    "HomeBlaz": "Data Source=HENIU-PC;Initial Catalog=aspnet-ScanApp;=User ID=blaztest;Password=12345;Connect Timeout=30;Encrypt=False;TrustServerCertificate=False;ApplicationIntent=ReadWrite;MultiSubnetFailover=False"
  },

  "KeePass": {
    "BaseAddress": "https://srv-app02:10001/",
    "TokenEndpoint": "OAuth2/Token",
    "RestEndpoint": "api/v4/rest/credential/",
    "Username": "local_machine_secret",
    "Password": "local_machine_secret"
  },

  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Error"
      }
    },

    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\SpareParts_LogFile_.txt",
          "outputTemplate": "{Timestamp:G} [{Level:u3}] {Message}{NewLine:1}{Exception:1}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 32000000,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31
        }
      },

      {
        "Name": "File",
        "Args": {
          "path": "Logs\\SpareParts_LogFile_JSON_.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 64000000,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31
        }
      }
    ]
  },

  "AllowedHosts": "*"
}