@using ScanApp.Components.Common.ScanAppTable.Options
@using ScanApp.Common.Extensions
@typeparam T

<MudDialog>
    <DialogContent>
        @if (TargetItem is not null)
        {
            <MudForm @ref="_form" @bind-IsValid="@_success" Class="table-condensed m-0 p-0">
                <EditFieldCreator T="T" Configs="Configs" @bind-TargetItem="@TargetItem"></EditFieldCreator>
            </MudForm>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Class="ml-auto" Variant="Variant.Filled" Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Class="mr-auto" Variant="Variant.Filled" Color="Color.Primary" Disabled="!_success" OnClick="Submit">Add user</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public List<ColumnConfig<T>> Configs { get; set; }

    [Parameter]
    public T SourceItem { get; set; }

    private T TargetItem { get; set; }

    private MudForm _form;
    private bool _success = true;

    protected override void OnInitialized()
    {
        TargetItem = SourceItem.Copy();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if(firstRender)
            _form?.Validate();
    }

    Task Submit()
    {
        if (_form is null)
        {
            MudDialog.Cancel();
            return Task.CompletedTask;
        }

        if (_success is false)
            return Task.CompletedTask;

        MudDialog.Close(DialogResult.Ok(TargetItem));
        return Task.CompletedTask;
    }

    void Cancel() => MudDialog.Cancel();
}